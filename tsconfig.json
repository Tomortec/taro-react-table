{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "dist",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noUnusedParameters": false, // 有未使用到的函数参数时报错
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    // "paths": {
    //   "@/types/*": ["./@types/*"],
    //   "@/components/*": ["./src/components/*"],
    //   "@/pages/*": ["./src/pages/*"],
    // }
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/**/*",
    "dist/*",
    "src/app.config.ts"
  ],
  "include": [
    "src/**/*"
  ],
}
